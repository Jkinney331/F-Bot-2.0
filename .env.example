# F-Bot 2.0 Environment Configuration
# Copy this file to .env and configure with your actual values

# === Core Application Settings ===
NODE_ENV=production
PORT=3000
HOST=0.0.0.0
APP_NAME=F-Bot-2.0
VERSION=2.0.0

# === Database Configuration ===
DATABASE_TYPE=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=fbot_production
DATABASE_USERNAME=fbot_user
DATABASE_PASSWORD=your_secure_password
DATABASE_SSL=true
DATABASE_URL=postgresql://fbot_user:your_secure_password@localhost:5432/fbot_production?sslmode=require

# === Redis Configuration ===
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_SSL=true
REDIS_URL=redis://localhost:6379/0

# === Security Configuration ===
JWT_SECRET=your_jwt_secret_32_characters_min
ENCRYPTION_KEY=your_32_character_encryption_key_
SESSION_SECRET=your_session_secret_key
SESSION_TIMEOUT=3600

# === API Keys ===
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
GOOGLE_API_KEY=your_google_api_key
LANGFUSE_SECRET_KEY=your_langfuse_secret_key
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key
LANGFUSE_HOST=https://cloud.langfuse.com

# === Multi-LLM Orchestration ===
LLM_ORCHESTRATION_ENABLED=true
LLM_DEFAULT_MODEL=gpt-4o
LLM_COST_OPTIMIZATION=true
LLM_PERFORMANCE_TRACKING=true
LLM_FALLBACK_ENABLED=true

# === HIPAA Compliance ===
HIPAA_MODE=true
HIPAA_ENCRYPTION_REQUIRED=true
HIPAA_AUDIT_ENABLED=true
HIPAA_AUDIT_RETENTION_DAYS=2555
DEIDENTIFICATION_ENABLED=true
DEIDENTIFICATION_METHOD=MIDI

# === GDPR Compliance ===
GDPR_ENABLED=true
GDPR_DATA_RESIDENCY=US
GDPR_CONSENT_REQUIRED=true
GDPR_RIGHT_TO_ERASURE=true

# === File Storage (AWS S3) ===
STORAGE_TYPE=s3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=fbot-production-files

# === Ultrasound Integration ===
GEMMA_ULTRASOUND_ENABLED=true
GEMMA_MODEL_PATH=/models/gemma-3n
GEMMA_CONFIDENCE_THRESHOLD=0.7
CLARIUS_INTEGRATION_ENABLED=false
CLARIUS_API_KEY=your_clarius_api_key

# === Monitoring & Analytics ===
MONITORING_ENABLED=true
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
ANALYTICS_ENABLED=true
COST_TRACKING_ENABLED=true
COST_ALERT_THRESHOLD=100
COST_ALERT_EMAIL=admin@fbot.ai

# === Logging ===
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=file
LOG_FILE_PATH=/var/log/fbot/app.log

# === Backup & Recovery ===
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION=true

# === Development/Testing Only ===
# HIPAA_MODE=false
# LOG_LEVEL=debug
# COST_TRACKING_ENABLED=false
